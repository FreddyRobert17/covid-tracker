<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_border_radius"
    app:cardElevation="@dimen/card_elevation"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_label_date"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/header_guideline"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_date"
            app:layout_constraintStart_toStartOf="@+id/starter_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_date"
            tools:text="05/11/2015" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:src="@drawable/plus_icon"
            android:contentDescription="@string/item_plus_icon_description"
            app:layout_constraintEnd_toStartOf="@+id/starter_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/header_guideline" />

        <TextView
            android:id="@+id/tv_label_positives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/item_label_positives"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/starter_guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_positives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_positives"
            app:layout_constraintStart_toStartOf="@+id/mid_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_positives"
            tools:text="28 513 234" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:layout_marginTop="5dp"
            android:src="@drawable/minus_icon"
            android:contentDescription="@string/item_minus_icon_description"
            app:layout_constraintEnd_toStartOf="@+id/starter_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_label_negatives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/item_label_negatives"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/starter_guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_negatives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_negatives"
            app:layout_constraintStart_toStartOf="@+id/mid_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_negatives"
            tools:text="74 252 365" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:layout_marginTop="5dp"
            android:src="@drawable/hospital_icon"
            android:contentDescription="@string/item_sick_person_icon_description"
            app:layout_constraintEnd_toStartOf="@+id/starter_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_label_hospitalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/item_label_hospitalized"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/starter_guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tv_hospitalized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_hospitalized"
            app:layout_constraintStart_toStartOf="@+id/mid_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_hospitalized"
            tools:text="776 361" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/card_icon_width"
            android:layout_height="@dimen/card_icon_height"
            android:layout_marginTop="5dp"
            android:src="@drawable/rip_icon"
            android:contentDescription="@string/item_rip_icon_description"
            app:layout_constraintEnd_toStartOf="@+id/starter_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tv_label_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/item_label_death"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/starter_guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/tv_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_death"
            app:layout_constraintStart_toStartOf="@+id/mid_guideline"
            app:layout_constraintTop_toTopOf="@+id/tv_label_death"
            tools:text="151 253" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mid_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/starter_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="32dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/empty_heart_icon"
            android:contentDescription="@string/item_heart_icon_description"
            app:layout_constraintBottom_toTopOf="@+id/header_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
